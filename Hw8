fun circle(): Any {

}

open class shape (){
//اسم الكلاس الاساسي اللي راح نورث منه
var shapeName = "Circle"
var shapeColor = "white"
//القيم لون الشكل واسمه
fun info (){
println("the ($shapeName) ($shapeColor)")
//نستدعي لون الشكل واسمه $ ونطبع
}

                }


         fun computeArea():double{
             //الفنكشن المطلوب فالسؤال اللي تحسب المساحه
            val area = 1.1
            print("area of the shape = ")
            return area
             //عشان نطبع قيمه area لذا سوينا ريترن وقبلها تكون جمله الطباعه

        }

    class Rectangle () :shape () {
        //انشأ سب  كلاس اسمه rectangle يرث من الكلاس الاساسي اللي اسمه shapes

        var width = 2
        var height = 4
        //متغيرات اسمها الطول والعرض ولها قيمها
        override fun computeArea(): Int {
            //نرسل التنفيذ للكود الموجود فالفئه الاساسيه لكن التغيير يكون فقط فالكلاس هذا (الكلاس الفرعي)

            return height * width
        }
    }

        class Triangle() : shape() {

            //انشأ سب  كلاس اسمه Triangle يرث من الكلاس الاساسي اللي اسمه shapes

            var base = 7
            var height = 2

            override fun computeArea(): Int {
                //نرسل التنفيذ للكود الموجود فالفئه الاساسيه لكن التغيير يكون فقط فالكلاس هذا (الكلاس الفرعي)

                return height * base
                //يسوي ريتيرن لقاعده المثلث
            }
        }

            class Circle() : shape() {
                //انشأ سب  كلاس اسمه سيركل يرث من الكلاس الاساسي اللي اسمه shapes
            }
                var pi = 3
            //انشا VAR  وله قيمه
                var radius = 5
            //انشا VAR  وله قيمه
                override fun computeArea(): Int {


                }


